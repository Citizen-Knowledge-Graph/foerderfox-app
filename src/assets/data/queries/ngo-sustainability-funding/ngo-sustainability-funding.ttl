@prefix fox: <https://foerderfox.org/default#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .

fox:metadata fox:author fox:benjaminaaron ;
             fox:created "2023-10-27"^^xsd:date ;
             fox:title "Checks if NGOs are eligible to receive sustainability funding" ;
             fox:queryType fox:dev ;
             fox:targetGroup fox:NGO;
             fox:fundingProvider fox:CityOfBerlin .

fox:TypeDeclarationShape
    a sh:NodeShape ;
    sh:targetNode fox:this ;
    sh:property [
          sh:path rdf:type ;
          sh:hasValue fox:NGOProfile ;
          sh:minCount 1 ;
      ] .

fox:MunicipalityEligibleForSportFieldFundingShape
    a sh:NodeShape ;
    sh:targetClass fox:NGO ;
    sh:property [
          sh:path fox:employees ;
          sh:datatype xsd:integer ;
          sh:minInclusive 10 ;
          sh:message "Number of Employees is below the minimum required" ;
      ] ;
    sh:property [
          sh:path fox:focusArea ;
          sh:in ( "Sustainability" ) ;
          sh:message "Focus area not applicable" ;
      ] ;
    sh:property [
          sh:path fox:location ;
          sh:in ( "Berlin" ) ;
          sh:message "Focus area not applicable" ;
      ] .
