@prefix fox: <https://foerderfox.org/default#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .

fox:TypeDeclarationShape
    a sh:NodeShape ;
    sh:targetNode fox:this ;
    sh:property [
          sh:path rdf:type ;
          sh:hasValue fox:CitizenProfile ;
          sh:minCount 1 ;
      ] .

fox:CitizenOwnsHouseShape
    a sh:NodeShape ;
    sh:targetClass fox:Citizen ;
    sh:property [
          sh:path fox:owns ;
          sh:class fox:House ;
          sh:minCount 1 ;
      ] .

fox:HouseEligibleForInsulationBonusShape
    a sh:NodeShape ;
    sh:targetClass fox:House ;
    sh:property [
          sh:path fox:roofArea ;
          sh:minCount 1 ;
          sh:datatype xsd:integer ;
          sh:minInclusive 50 ;
          sh:message "50" ;
      ] .
