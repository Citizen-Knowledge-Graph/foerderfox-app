@prefix fox: <https://foerderfox.org/default#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .

fox:metadata fox:author fox:benjaminaaron ;
             fox:created "2023-11-01"^^xsd:date ;
             fox:title "Checks if a citizen is eligible for Wohngeld" ;
             fox:queryType fox:dev ;
             fox:targetGroup fox:Citizen ;
             fox:fundingProvider fox:GermanState .

fox:TypeDeclarationShape
    a sh:NodeShape ;
    sh:targetNode fox:this ;
    sh:property [
          sh:path rdf:type ;
          sh:hasValue fox:CitizenProfile ;
          sh:minCount 1 ;
      ] .

fox:CitizenRentsFlatShape
    a sh:NodeShape ;
    sh:targetClass fox:Citizen ;
    sh:property [
          sh:path fox:rents ;
          sh:class fox:Flat ;
          sh:minCount 1 ;
      ] .

fox:FlatAreaShape
    a sh:NodeShape ;
    sh:targetClass fox:Flat ;
    sh:property [
          sh:path fox:livingArea ;
          sh:datatype xsd:integer ;
          sh:maxInclusive 60 ;
          sh:message "60" ;
          sh:minCount 1 ;
      ] .

fox:IncomeShape
    a sh:NodeShape ;
    sh:targetClass fox:Citizen ;
    sh:property [
          sh:path fox:monthlyIncome ;
          sh:datatype xsd:integer ;
          sh:maxInclusive 2000 ;
          sh:message "2000" ;
          sh:minCount 1 ;
      ] .
