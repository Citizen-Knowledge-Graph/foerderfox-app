@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix fox: <https://foerderfox.org/default#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .

fox:TypeDeclarationShape
    a sh:NodeShape ;
    sh:targetNode fox:this ;
    sh:property [
                    sh:path rdf:type ;
                    sh:hasValue fox:CitizenProfile ;
                    sh:minCount 1 ;
                ] .

fox:ChildAllowanceEligibilityShape
    a sh:NodeShape ;
    sh:targetClass fox:Citizen ;
    sh:property [
                    sh:path fox:hasChildren ;
                    sh:minCount 1 ;
                ] ;
    sh:property [
                    sh:path fox:monthlyIncome ;
                    sh:maxInclusive 2000 ;
                    sh:datatype xsd:integer ;
                ] .
