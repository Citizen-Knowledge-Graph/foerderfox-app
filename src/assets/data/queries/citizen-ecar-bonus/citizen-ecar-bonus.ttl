@prefix fox: <https://foerderfox.org/default#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .

fox:TypeDeclarationShape
    a sh:NodeShape ;
    sh:targetNode fox:this ;
    sh:property [
                    sh:path rdf:type ;
                    sh:hasValue fox:CitizenProfile ;
                    sh:minCount 1 ;
                ] .

fox:CitizenOwnsElectricCarShape
    a sh:NodeShape ;
    sh:targetClass fox:Citizen ;
    sh:property [
                    sh:path fox:owns ;
                    sh:qualifiedValueShape fox:ElectricCarShape ;
                    sh:qualifiedMinCount 1 ;
                ] ;
    sh:property [
                    sh:path fox:hasResidence ;
                    sh:hasValue "Berlin" ;
                ] ;
    sh:property [
                    sh:path fox:hasDrivingLicense ;
                    sh:hasValue true ;
                ] .

fox:ElectricCarShape
    a sh:NodeShape ;
    sh:targetClass fox:Car ;
    sh:property [
                    sh:path rdf:type ;
                    sh:hasValue fox:Car ;
                ] ;
    sh:property [
                    sh:path fox:carType ;
                    sh:hasValue "Electric" ;
                ] ;
    sh:property [
                    sh:path fox:carAge ;
                    sh:maxInclusive 5 ;
                    sh:datatype xsd:integer ;
                ] .
