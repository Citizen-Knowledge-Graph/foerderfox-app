@prefix fox: <https://foerderfox.org/default#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .

fox:metadata fox:author fox:benjaminaaron ;
             fox:created "2023-10-26"^^xsd:date ;
             fox:title "Checks if house owners are eligible for funding for solar panels" ;
             fox:queryType fox:dev ;
             fox:targetGroup fox:Citizen ;
             fox:fundingProvider fox:GermanState .

fox:TypeDeclarationShape
    a sh:NodeShape ;
    sh:targetNode fox:this ;
    sh:property [
          sh:path rdf:type ;
          sh:hasValue fox:CitizenProfile ;
          sh:minCount 1 ;
      ] .

fox:CitizenOwnsHouseShape
    a sh:NodeShape ;
    sh:targetClass fox:Citizen ;
    sh:property [
        sh:path fox:owns ;
        sh:qualifiedValueShape [
            sh:class fox:House ; # Shape that values must conform to, in this case, a House
        ] ;
        sh:qualifiedMinCount 1 ; # At least one value must conform to the above shape
    ] .

fox:HouseEligibleForSolarFundingShape
    a sh:NodeShape ;
    sh:targetClass fox:House ;
    sh:property [
        sh:path fox:roofArea ;
        sh:minCount 1 ;
        sh:datatype xsd:integer ;
        sh:minInclusive 100 ;
        sh:message "100" ;
    ] ;
    sh:property [
        sh:path fox:houseAge ;
        sh:minCount 1 ;
        sh:datatype xsd:integer ;
        sh:maxInclusive 20 ;
        sh:message "20" ;
    ] .
